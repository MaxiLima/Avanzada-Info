%clauses

entrada(paella).
entrada(gazpacho).
entrada(consomé).

carne(filete_de_cerdo).
carne(pollo_asado).

pescado(trucha).
pescado(bacalao).

postre(flan).
postre(helado).
postre(pastel).

%fin clauses

menu(X,Y,Z):- entrada(X),(carne(Y);pescado(Y)),postre(Z).
menu_consome(X,Y):-entrada(consome),(carne(X);pescado(X)),postre(Y).
menu_sin_flan(X,Y,Z):-entrada(X),(carne(Y);pescado(Y)),postre(Z), dif(Z,flan).
